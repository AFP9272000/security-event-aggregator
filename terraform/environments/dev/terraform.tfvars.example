#------------------------------------------------------------------------------
# Security Event Aggregator - Dev Environment Configuration
# Copy this to terraform.tfvars and customize for your deployment
#------------------------------------------------------------------------------

# General
project_name = "sea"
environment  = "dev"
aws_region   = "us-east-1"

# VPC - Cost optimized for dev
vpc_cidr             = "10.0.0.0/16"
az_count             = 2
enable_nat_gateway   = true
single_nat_gateway   = true  # Single NAT to save costs in dev
enable_vpc_endpoints = true  # VPC endpoints reduce NAT costs

# Database
dynamodb_billing_mode = "PAY_PER_REQUEST"  # On-demand for variable workloads

# Notifications - Add your email to receive alerts
alert_email = ""  # e.g., "your-email@example.com"

# SSL/TLS - Add certificate ARN for HTTPS
certificate_arn = ""  # e.g., "arn:aws:acm:us-east-1:123456789012:certificate/abc123"

# Container Configuration - Small for dev
image_tag = "latest"

api_gateway_cpu        = 256
api_gateway_memory     = 512
event_ingest_cpu       = 256
event_ingest_memory    = 512
event_processor_cpu    = 256
event_processor_memory = 512

# Scaling - Minimal for dev
api_gateway_desired_count     = 1
event_ingest_desired_count    = 1
event_processor_desired_count = 1
enable_autoscaling            = false
use_fargate_spot              = true  # Cost savings with Spot

# Observability
enable_container_insights = true
log_retention_days        = 14

# CI/CD - Update with your GitHub repo
enable_github_oidc = true
github_repo        = ""  # e.g., "your-username/security-event-aggregator"
